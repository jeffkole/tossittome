{
  "manifest_version": 2,

  "name": "Toss It To Me!",
  "short_name": "Toss It To Me!",
  "description": "Tosses URLs from here to there.",
  "version": "2.1.0",

  "icons": {
    "16" : "images/icon-16.png",
    "48" : "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "options_page": "options.html",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Toss It To Me!",
    "default_popup": "popup.html"
  },

  "permissions": [
    "alarms",
    "cookies",
    "storage",
    "tabs",
    "*://localhost/"
//    Needed for content page script execution
//    "<all_urls>"
  ]
}
