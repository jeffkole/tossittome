{
  "manifest_version": 2,

  "name": "TossItToMe",
  "description": "Tosses URLs from here to there.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "TossItToMe",
    "default_popup": "popup.html"
  },

  "permissions": [
    "cookies",
    "*://{{ host }}/"
  ]
}
